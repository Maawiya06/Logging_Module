<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{hh:mm:ss.SSS: a} [%thread] %-5level %logger{36} -%kvp- %msg%n</pattern>
        </encoder>
    </appender>

<!--    This is file appender-->
    <appender name="File_SOUT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>
            logs/Logging_Module.log
        </file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>logs/Logging_Module.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- keep 30 days' worth of history capped at 3GB total size -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>

        </rollingPolicy>

        <encoder>
            <pattern>%d{hh:mm:ss.SSS: a} [%thread] %-5level %logger{36} -%kvp- %msg%n</pattern>
        </encoder>

    </appender>
<!--    <root level="debug">-->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="spring.back" level="TRACE" additivity="false">
        <appender-ref ref="File_SOUT"/>

    </logger>
</configuration>